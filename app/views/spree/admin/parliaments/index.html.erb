<% content_for :page_title do %>
  <%= Spree.t :long_name, scope: :owls %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:create, scope: :owls), 
        new_admin_parliament_url, 
        { :class => "btn-success", :icon => 'add', :id => 'admin_new_parliament' } %>
<% end if can?(:create, Spree::Parliament) %>

<% if @parliaments.any? %>
  <table class="table" id="listing_products">
    <thead>
      <tr data-hook="admin_products_index_headers">
        <th><%= Spree.t(:name, scope: :owls) %></th>
        <th data-hook="admin_products_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @parliaments.each do |parliament| %>
      <tr id="<%= spree_dom_id parliament %>" data-hook="admin_parliaments_index_rows" class="<%= cycle('odd', 'even') %>">
        <td><%= link_to parliament.name, admin_parliament_path(parliament) %></td>
        <td class="actions actions-3 text-right" data-hook="admin_parliament_index_row_actions">
          
          <%= link_to_with_icon('delete', nil, admin_parliament_path(parliament),
                title: Spree.t(:delete),
                data: { confirm: Spree.t(:are_you_sure), action: 'remove' }, 
                class: "btn btn-danger btn-sm delete-resource icon-link with-tip action-delete") if can?(:destroy, parliament) %>

          <%= link_to_with_icon('edit', nil, admin_parliament_path(parliament),
                title: Spree.t(:edit),
                data: { action: 'edit' }, 
                class: "btn btn-primary btn-sm icon-link with-tip action-edit") if can?(:edit, parliament)  %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>